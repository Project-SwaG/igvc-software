<!-- camera.launch -->

<launch>
    <!-- Camera Node -->
	<node name="usb_cam" pkg="usb_cam" type="usb_cam_node">
	    <param name="path" type="string" value="file:///home/robojackets/catkin_ws/"/>
	    <param name="video_device" type="string" value="/dev/video0" />
	    <param name="pixel_format" type="string" value="yuyv" />
	    <param name="camera_frame_id" type="string" value="/camera" />
	    <param name="camera_info_url" type="string" value="file://$(find igvc)/launch/usb_cam.yaml" />
	    <param name="camera_name" type="string" value="usb_cam" />
	</node>
</launch>
